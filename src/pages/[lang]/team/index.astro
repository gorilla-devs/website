---
import Button from "@/components/Button";
import languages from "@/i18n/languages";
import { useTranslations } from "@/i18n/utils";
import MainWrapper from "@/layouts/MainWrapper.astro";
import Timeline from "@/components/Timeline/index.astro";
import PartnerSection from "@/components/PartnerSection/index.astro";
import composeCDNAssetLink from "@/utils/composeCDNAssetLink";
import SEO from "@/components/SEO/index.astro";

export const getStaticPaths = () => {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
};

const t = useTranslations(Astro.url.pathname);
---

<SEO
  title="GDLauncher - Team"
  description="Here you can meet the people working behind GDLauncher!"
/>

<MainWrapper>
  <div class="h-auto relative">
    <div
      class={`relative flex flex-col justify-center items-center pt-1 box-border h-[calc(100vh-5.5rem)] lg:h-screen
            bg-[url("https://edge.gdlauncher.com/assets/mc_forest_4.jpg")] bg-no-repeat`}
    >
      <div class="absolute top-0 bottom-0 left-0 right-0">
        <div
          class="absolute top-0 bottom-0 left-0 right-0 z-10 opacity-95 bg-slate-800"
        >
        </div>
      </div>
      <div
        class="w-4/5 lg:w-full z-20 flex flex-col-reverse lg:flex-row justify-between items-center gap-0 lg:px-20 max-w-7xl"
      >
        <div class="py-0 px-4 max-w-4xl">
          <h3 class="text-5xl lg:text-8xl mb-2 font-bold">
            {t("team.title")}
          </h3>
          <p class="text-xl mb-4 lg:mb-12 font-light">
            {t("team.text")}
          </p>
          <a href="#timeline">
            <Button>{t("generic.learn_more")}</Button>
          </a>
        </div>
        <div>
          <img
            class="w-full"
            src={composeCDNAssetLink("meet_the_team.svg")}
            alt="launcher_mockup"
          />
        </div>
      </div>
    </div>
    <!-- <CaretIcon
      class="relative bottom-10 sm:bottom-14 lg:bottom-20 my-0 mx-auto w-5 h-5 z-30"
    /> -->
    <div id="timeline">
      <Timeline />
    </div>
    <div class="flex flex-col justify-center items-center">
      <div
        class="w-4/5 lg:w-full z-20 flex flex-col-reverse lg:flex-row justify-center items-center max-w-7xl pb-10 mt-10 sm:mt-30"
      >
        <div class="flex flex-col items-center lg:items-start">
          <h3 class="text-5xl lg:text-8xl mb-10 font-bold">
            {t("team.team_title")}
          </h3>
          <p class="text-xl mb-12 font-light">
            {t("team.team_text")}
          </p>
          <div>
            <div
              class="w-full flex flex-col-reverse lg:flex-row-reverse justify-end items-center max-w-7xl"
            >
              <div class="py-0 px-4 max-w-4xl">
                <h3 class="mb-2 text-2xl font-bold break-all lg:break-normal">
                  {t("team.member_davide")}
                </h3>
                <p class="text-xl font-light max-w-lg">
                  {t("team.member_davide_text")}
                </p>
              </div>
              <div>
                <img
                  class="w-full"
                  src={composeCDNAssetLink("davide_profile.svg")}
                  alt="davide_profile"
                />
              </div>
            </div>
            <div
              class="w-full flex flex-col-reverse lg:flex-row justify-start items-center max-w-7xl text-right"
            >
              <div class="py-0 px-4 max-w-4xl text-left lg:text-right">
                <h3 class="mb-2 text-2xl font-bold break-all lg:break-normal">
                  {t("team.member_gianmarco")}
                </h3>
                <p class="text-xl font-light max-w-lg">
                  {t("team.member_gianmarco_text")}
                </p>
              </div>
              <div>
                <img
                  class="w-full"
                  src={composeCDNAssetLink("gianmarco_profile.svg")}
                  alt="gianmarco_profile"
                />
              </div>
            </div>

            <div
              class="w-full flex flex-col-reverse lg:flex-row-reverse justify-end items-center max-w-7xl"
            >
              <div class="py-0 px-4 max-w-4xl">
                <h3 class="mb-2 text-2xl font-bold break-all lg:break-normal">
                  {t("team.member_valentin")}
                </h3>
                <p class="text-xl font-light max-w-lg">
                  {t("team.member_valentin_text")}
                </p>
              </div>
              <div>
                <img
                  class="w-full"
                  src={composeCDNAssetLink("BH_valentin.png")}
                  alt="valentin_profile"
                />
              </div>
            </div>
            <div
              class="w-full flex flex-col-reverse lg:flex-row justify-end items-center max-w-7xl text-right"
            >
              <div class="py-0 px-4 max-w-4xl text-left lg:text-right">
                <h3 class="mb-2 text-2xl font-bold break-all lg:break-normal">
                  {t("team.member_sasha")}
                </h3>
                <p class="text-xl font-light max-w-lg">
                  {t("team.member_sasha_text")}
                </p>
              </div>
              <div>
                <img
                  class="w-full"
                  src={composeCDNAssetLink("sasha_profile.svg")}
                  alt="sasha_profile"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <PartnerSection />
    <div
      class={`relative flex flex-col justify-center items-center pt-1 box-border bg-[url("https://edge.gdlauncher.com/assets/mc_forest_3.jpg")] bg-no-repeat`}
    >
      <div class="absolute top-0 bottom-0 left-0 right-0">
        <div
          class="absolute top-0 bottom-0 left-0 right-0 z-10 opacity-95 bg-slate-800"
        >
        </div>
      </div>
      <div
        class="w-4/5 lg:w-full z-20 flex flex-col-reverse lg:flex-row justify-center items-center gap-15 max-w-7xl py-32 lg:px-8"
      >
        <div class="py-0 max-w-2xl min-w-fit md:min-w-[1000px]">
          <h3 class="text-5xl lg:text-8xl mb-2 font-bold">
            {t("generic.reportIssues")}
          </h3>
          <p class="text-xl mb-12 font-light md:w-1/2">
            {t("generic.reportIssues_text")}
          </p>
          <Button style={{ background: "#c2410c" }}
            >{t("generic.reportAnIssue")}
          </Button>
        </div>
      </div>
    </div>
  </div>
</MainWrapper>
