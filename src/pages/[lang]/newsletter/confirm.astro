---
import SEO from "@/components/SEO/index.astro";
import composeCDNAssetLink from "@/utils/composeCDNAssetLink";
import languages from "@/i18n/languages";
import { useTranslations } from "@/i18n/utils";
import BasicLayout from "@/layouts/BasicLayout.astro";

export const getStaticPaths = () => {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
};

const t = useTranslations(Astro.url.pathname);
---

<SEO
  title="GDLauncher - Successfully subscribed to the newsletter"
  description="You have successfully subscribed to the GDLauncher newsletter!"
/>

<BasicLayout>
  <div class="flex max-h-screen justify-center flex-col items-center pt-20 lg:pt-26 px-10 h-screen overflow-hidden gap-5 lg:gap-auto">
    <h1
      class="flex flex-col lg:block text-4xl lg:text-7xl font-bold text-center max-w-[1000px]"
    >
      {t("newsletter.confirm.title")}
    </h1>
    <div class="h-full max-h-[600px]">
      <img
        src={composeCDNAssetLink("gorilla_email.jpg")}
        alt="logo"
        class="h-full"
      />
    </div>
  </div>
</BasicLayout>
